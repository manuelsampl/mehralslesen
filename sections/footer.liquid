

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
 <!-- Logo Section -->
    {% if section.settings.logo_image %}
      <div class="footer__logo">
        <img 
          src="{{ section.settings.logo_image | image_url: width: section.settings.logo_width }}" 
          alt="{{ shop.name }}"
          width="{{ section.settings.logo_width }}"
          height="auto"
          loading="lazy"
        >
      </div>
    {% endif %}
<footer
  class="footer section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="
    --footer-padding-top: {{ section.settings.padding_top }}px;
    --footer-padding-bottom: {{ section.settings.padding_bottom }}px;
    --footer-columns-gap: {{ section.settings.columns_gap }}px;
    --footer-social-gap: {{ section.settings.social_gap }}px;
  "
>
  {% render 'background-media',
    background_media: section.settings.background_media,
    background_video: section.settings.video,
    background_video_position: section.settings.video_position,
    background_image: section.settings.background_image,
    background_image_position: section.settings.background_image_position
  %}

  

  <div class="footer__container">
   

    <!-- Main Footer Columns -->
    <div class="footer__columns">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'footer_column' %}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {% if block.settings.headline %}
                <h3 class="footer__column-title">{{ block.settings.headline }}</h3>
              {% endif %}
              
              {% if block.settings.content_type == 'text' and block.settings.text %}
                <div class="footer__column-text">
                  {{ block.settings.text }}
                </div>
              {% elsif block.settings.content_type == 'menu' and block.settings.menu != blank %}
                <nav class="footer__column-menu">
                  <ul class="footer__menu-list">
                    {% for link in linklists[block.settings.menu].links %}
                      <li class="footer__menu-item">
                        <a href="{{ link.url }}" class="footer__menu-link">
                          {{ link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </nav>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Social Media Section -->
    {% if section.settings.social_title or section.settings.show_social %}
      <div class="footer__social">
        {% if section.settings.social_title %}
          <h3 class="footer__social-title">{{ section.settings.social_title }}</h3>
        {% endif %}
        
        {% if section.settings.show_social %}
          <div class="footer__social-links">
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="footer__social-link" target="_blank" rel="noopener">
                <span class="footer__social-text">Facebook</span>
              </a>
            {% endif %}
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="footer__social-link" target="_blank" rel="noopener">
                <span class="footer__social-text">Instagram</span>
              </a>
            {% endif %}
            {% if settings.social_youtube_link != blank %}
              <a href="{{ settings.social_youtube_link }}" class="footer__social-link" target="_blank" rel="noopener">
                <span class="footer__social-text">Youtube</span>
              </a>
            {% endif %}
            {% if settings.social_twitter_link != blank %}
              <a href="{{ settings.social_twitter_link }}" class="footer__social-link" target="_blank" rel="noopener">
                <span class="footer__social-text">Twitter</span>
              </a>
            {% endif %}
            {% if settings.social_linkedin_link != blank %}
              <a href="{{ settings.social_linkedin_link }}" class="footer__social-link" target="_blank" rel="noopener">
                <span class="footer__social-text">LinkedIn</span>
              </a>
            {% endif %}
            {% if settings.social_tiktok_link != blank %}
              <a href="{{ settings.social_tiktok_link }}" class="footer__social-link" target="_blank" rel="noopener">
                <span class="footer__social-text">TikTok</span>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</footer>

{% stylesheet %}
footer{

  margin-top: 140px;
}
.footer {
  padding: var(--footer-padding-top) 0 var(--footer-padding-bottom);
  background-color: rgb(var(--color-background));
}

.footer__container {
  position: relative;
  width: 100%;
  margin: 0 auto;
  padding: 0 var(--page-margin);
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.footer__logo {
  position: absolute;
  z-index: 2;
  left: 40px;
  top: -75px
}

.footer__logo img {
  max-width: 100%;
  height: auto;
}

.footer__columns {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--footer-columns-gap);
  align-items: flex-start;
}

@media screen and (max-width: 990px) {
  .footer__columns {
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
}

@media screen and (max-width: 750px) {
  .footer__columns {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
}

.footer__column {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.footer__column-title {
  font-family: var(--font-heading-family);
  font-weight: var(--font-heading-weight);
  font-size: 1.125rem;
  line-height: 1.4;
  margin: 0;
  color: rgb(var(--color-foreground));
}

.footer__column-text {
  font-size: 0.875rem;
  line-height: 1.6;
  color: rgb(var(--color-foreground));
}

.footer__column-text p {
  margin: 0 0 0.5rem 0;
}

.footer__column-text p:last-child {
  margin-bottom: 0;
}

.footer__column-menu {
  width: 100%;
}

.footer__menu-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.footer__menu-item {
  margin: 0;
}

.footer__menu-link {
  color: rgb(var(--color-foreground));
  text-decoration: none;
  font-size: 0.875rem;
  line-height: 1.6;
  transition: color 0.2s ease;
}

.footer__menu-link:hover,
.footer__menu-link:focus {
  color: rgb(var(--color-foreground-secondary));
  text-decoration: underline;
}

.footer__social {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: flex-start;
}

.footer__social-title {
  font-family: var(--font-heading-family);
  font-weight: var(--font-heading-weight);
  font-size: 1.125rem;
  line-height: 1.4;
  margin: 0;
  color: rgb(var(--color-foreground));
}

.footer__social-links {
  display: flex;
  gap: var(--footer-social-gap);
  flex-wrap: wrap;
  justify-content: flex-start;
}

.footer__social-link {
  color: rgb(var(--color-foreground));
  text-decoration: none;
  font-size: 0.875rem;
  line-height: 1.6;
  transition: color 0.2s ease;
  padding: 0.25rem 0;
}

.footer__social-link:hover,
.footer__social-link:focus {
  color: rgb(var(--color-foreground-secondary));
  text-decoration: underline;
}

.footer__social-text {
  display: inline-block;
}

/* Responsive adjustments */
@media screen and (max-width: 990px) {
  .footer__container {
    gap: 2rem;
  }
}

@media screen and (max-width: 750px) {
  .footer__social-links {
    gap: calc(var(--footer-social-gap) * 0.75);
  }
  
  .footer__social-link {
    font-size: 0.8125rem;
  }
}
{% endstylesheet %}

