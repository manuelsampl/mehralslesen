  const originalFetch = window.fetch; // Store for use in handleCartAdd
  let handlingCartAdd = false;
  let lastHandleCartAddTime = 0;
  let lastNotificationTime = 0;

  console.log('üéØ Setting up add-to-cart button listener...');

